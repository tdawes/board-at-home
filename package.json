{
  "name": "board-at-home",
  "version": "1.0.0",
  "workspaces": [
    "client",
    "server",
    "packages/*",
    "games/*"
  ],
  "scripts": {
    "build": "set -ex; tsc --build",
    "build:watch": "yarn build --watch",
    "build:client": "yarn workspace @board-at-home/client build",
    "start:client": "yarn workspace @board-at-home/client start",
    "build:server": "yarn workspace @board-at-home/server build",
    "start:server": "yarn workspace @board-at-home/server start",
    "clean": "wsrun clean",
    "test": "wsrun test",
    "lint": "wsrun lint"
  },
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "heroku": "^7.39.1",
    "prettier": "^1.19.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.2.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.8.3",
    "wsrun": "^5.2.0"
  }
}
