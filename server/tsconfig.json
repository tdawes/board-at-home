{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es6",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["src", "typings"],
  "references": [
    { "path": "../packages/api" },
    { "path": "../games/coup" },
    { "path": "../games/hanabi" },
    { "path": "../games/quiz" },
    { "path": "../games/tic-tac-toe" }
  ]
}
