    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.0",
    "@types/koa-send": "^4.1.2",
    "@types/koa-static": "^4.0.1",
    "@types/lodash": "^4.14.149",
    "@types/memory-cache": "^0.2.1",
    "@types/socket.io": "^2.1.4",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@board-at-home/api": "*",
    "@board-at-home/coup": "*",
    "@board-at-home/hanabi": "*",
