{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "esModuleInterop": true,
    "composite": true
  },
  "include": ["src", "typings"],
  "references": [{ "path": "../../packages/api" }]
}
